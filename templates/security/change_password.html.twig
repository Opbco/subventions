{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
    body {
        background-color: #f4f6f9;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        font-family: 'Arial', sans-serif;
    }
    .password-container {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        padding: 40px;
        width: 100%;
        max-width: 450px;
    }
    .password-change-form h1 {
        color: #2c3e50;
        text-align: center;
        margin-bottom: 30px;
        font-weight: 600;
    }
    .form-group {
        margin-bottom: 20px;
    }
    .form-control {
        width: 92%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        transition: border-color 0.3s ease;
    }
    .form-control:focus {
        outline: none;
        border-color: #4cceac;
    }
    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #4cceac;
        border: none;
        border-radius: 8px;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .btn-primary:hover {
        background-color:rgb(29, 133, 105);
    }
    .form-errors {
        color: #e74c3c;
        margin-bottom: 20px;
        text-align: center;
    }
</style>
{% endblock %}

{% block body %}
<div class="password-container">
    {{ form_start(form, {'attr': {'class': 'password-change-form'}}) }}
        <h1>Change Password</h1>
        
        <div class="form-group">
            {{ form_row(form.newPassword.first, {
                'attr': {'class': 'form-control', 'placeholder': 'New Password'}
            }) }}
        </div>
        
        <div class="form-group">
            {{ form_row(form.newPassword.second, {
                'attr': {'class': 'form-control', 'placeholder': 'Confirm New Password'}
            }) }}
        </div>
        
        {% if form_errors(form)|length %}
            <div class="form-errors">
                {{ form_errors(form) }}
            </div>
        {% endif %}
        
        <button type="submit" class="btn btn-primary">Change Password</button>
    {{ form_end(form) }}
</div>
{% endblock %}