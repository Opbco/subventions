{% extends 'base.html.twig' %}

{% block title %}Change Password{% endblock %}



{% block body %}
<style>
    .container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #4cceac;
        padding: 1rem;
        border-radius: 1rem;
    }
</style>
<div class="container">
    <h1>Change Password</h1>
    
    {{ form_start(form, {'attr': {'class': 'password-change-form'}}) }}
        <div class="form-group">
            {{ form_row(form.newPassword.first, {
                'attr': {'class': 'form-control', 'placeholder': 'New Password'}
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.newPassword.second, {
                'attr': {'class': 'form-control', 'placeholder': 'Confirm New Password'}
            }) }}
        </div>
        
        {{ form_errors(form) }}
        
        <button type="submit" class="btn btn-primary">Change Password</button>
    {{ form_end(form) }}
</div>
{% endblock %}